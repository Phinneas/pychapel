{
    "log_level":    "DEBUG",
    "open_ahead":   true,

    "object_store": {
        "root_path":    "/home/safl/pychapel/module",
        "search_paths": {
            "tp":       ["store/third_party"],
            "c":        ["store/c"],
            "chapel":   ["store/chapel"]
        },
        "output_paths": {
            "c":        "store/c",
            "chapel":   "store/chapel"
        }
    },

    "specializers": {
        "c":            "/home/safl/pychapel/module/templates",
        "chapel":       "/home/safl/pychapel/module/templates"
    },

    "compilers": {
        "c":       {
            "root_path":    "/home/safl/pychapel/module",
            "output_path":  "lib/c",
            "lib_path":     "lib",
            "inc_path":     "include",
            "includes":     ["include"],

            "cflags": [
                "-lm",
                "-g",
                "-O3",
                "-march=native",
                "-fopenmp",
                "-fPIC",
                "-std=c99",
                "-shared"
            ],
            "lflags": [],
            "ctargets": [
                "__SFILE__"
            ],
            "ltargets": [],
            "commands": [
                "gcc %(cflags)s %(includes)s %(ctargets)s -o __OBJECT_ABSPATH__ "
            ]
        },

        "chapel":    {
            "root_path":        "/home/safl/pychapel/module",
            "output_path":      "store/chapel",
            "lib_path":         "lib",
            "inc_path":         "include",
            "includes":         ["/usr/include/python2.7"],

            "cflags": [
                "--fast",
                "--library",
                "--static",
                "-snoRefCount",
                "-searlyShiftData=false"
            ],
            "lflags": [
                "-shared",
                "-lpthread",
                "-lgmp"
            ],

            "ctargets": [
                "%(inc_path)s/pych.h",
                "__SFILE__"
            ],
            "ltargets": [
                "__TMP_PATH__.a",
                "%(lib_path)s/libchpl.a",
                "%(lib_path)s/main.o"
            ],

            "commands": [
                "chpl %(cflags)s %(ctargets)s -o __TMP_PATH__ --savec here",
                "g++ %(lflags)s -Wl,--whole-archive %(ltargets)s -Wl,--no-whole-archive -o __OBJECT_ABSPATH__"
            ]
        }
    }
}
